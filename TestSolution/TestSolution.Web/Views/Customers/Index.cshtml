@model IEnumerable<TestSolution.Model.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<h2>Customers</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br/>

    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Birth Date</th>
                <th>Address</th>
                <th>Contact No.</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Edit", "Customers")</td>
                        <td>@customer.Birthdate</td>
                        <td>@customer.Address</td>
                        <td>@customer.ContactNo</td>
                        <td><button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button></td>
                    </tr>
                }*@
        </tbody>
    </table>

    @section scripts
{
        <script>
            $(document).ready(function () {
                $("#customers").DataTable({
                    ajax: {
                        url: "/api/customers",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data, type, customer) {
                                return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                            }
                        },
                        {
                            data: "birthdate",
                            render: function (data, type, customer) {
                                return moment(customer.birthdate).format('MMM-DD-YYYY');
                            }
                        },
                        {
                            data: "address"
                        },
                        {
                            data: "contactNo"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });


                $("#customers").on("click", ".js-delete", function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                        if (result) {
                            $.ajax({
                                url: "api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    button.parents("tr").remove();
                                }
                            });
                        }
                    });

                });
            });
        </script>
    }


